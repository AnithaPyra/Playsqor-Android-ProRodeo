<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/actionBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintStart_toStartOf="@+id/actionBar"
            app:layout_constraintTop_toTopOf="@+id/actionBar" />

        <ImageView
            android:id="@+id/ivPlaySqorIcon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/playsqor_icon"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintStart_toEndOf="@+id/ivMenu"
            app:layout_constraintTop_toTopOf="@+id/actionBar" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/profile_white_outline"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintEnd_toStartOf="@+id/viewTrophyWhite"
            app:layout_constraintTop_toTopOf="@+id/actionBar"
            app:tint="@color/black" />


        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/green_filled_rectangle"
            android:src="@drawable/playsqor_icon"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/actionBar" />

        <ImageView
            android:id="@+id/ivTrophy2"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:src="@drawable/cup_white"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintEnd_toStartOf="@+id/count"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/actionBar"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/karla_regular"
            android:maxLength="2"
            android:text="10"
            android:textColor="@color/white"
            android:textFontWeight="1000"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivTrophy2"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/ivTrophy2"
            app:layout_constraintTop_toTopOf="@+id/ivTrophy2" />


        <View
            android:id="@+id/viewTrophyWhite"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/green_outlined_rectangle"
            android:src="@drawable/playsqor_icon"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/actionBar" />

        <ImageView
            android:id="@+id/ivTrophy1"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:src="@drawable/cup_gray"
            app:layout_constraintBottom_toBottomOf="@+id/actionBar"
            app:layout_constraintEnd_toStartOf="@+id/count2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/viewTrophyWhite"
            app:layout_constraintTop_toTopOf="@+id/actionBar"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/karla_regular"
            android:maxLength="2"
            android:text="10"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivTrophy1"
            app:layout_constraintEnd_toEndOf="@+id/viewTrophyWhite"
            app:layout_constraintStart_toEndOf="@+id/ivTrophy1"
            app:layout_constraintTop_toTopOf="@+id/ivTrophy1" />


        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:background="#F2F2F2"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionBar" />


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/actionBar"
            app:layout_constraintTop_toBottomOf="@+id/actionBar" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/karla_regular"
            android:text="Name of the contest"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />


        <ImageView
            android:id="@+id/ivWhistle"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:src="@drawable/rules"
            app:layout_constraintStart_toStartOf="@+id/actionBar"
            app:layout_constraintTop_toBottomOf="@+id/view3" />


        <TextView
            android:id="@+id/tvRulesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/karla_regular"
            android:text="Rules"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivWhistle"
            app:layout_constraintStart_toEndOf="@+id/ivWhistle"
            app:layout_constraintTop_toTopOf="@+id/ivWhistle" />

        <TextView
            android:id="@+id/tvRulesData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/karla_regular"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_maecenas_varius_tortor_nibh_sit_amet_tempor_nibh_finibus_et_aenean_eu_enim_justo_vestibulum_aliquam_hendrerit_molestie"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivWhistle"
            app:layout_constraintTop_toBottomOf="@+id/ivWhistle" />


        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/down_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/ivWhistle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivWhistle"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/tvPlayersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#F2F2F2"
            android:fontFamily="@font/karla_regular"
            android:padding="@dimen/_5sdp"
            android:text="Players Combo"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/ivWhistle"
            app:layout_constraintTop_toBottomOf="@+id/tvRulesData" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlayersMatchup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayersTitle" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>