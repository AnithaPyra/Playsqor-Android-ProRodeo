<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ivSportsBall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@drawable/ic_baseball"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvLeageAbbrevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_20"
            android:textColor="@color/black"
            android:fontFamily="@font/karla_bold"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/ivSportsBall"
            app:layout_constraintTop_toTopOf="@+id/ivSportsBall"
            app:layout_constraintBottom_toBottomOf="@+id/ivSportsBall"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLeagueCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLeageAbbrevation"
            tools:listitem="@layout/fragment_mlb_new"/>



</androidx.constraintlayout.widget.ConstraintLayout>